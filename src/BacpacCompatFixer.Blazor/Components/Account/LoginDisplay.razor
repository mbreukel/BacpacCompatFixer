@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center gap-2">
            <span class="text-nowrap">@context.User.Identity?.Name</span>
            <form action="Account/SignOut" method="post">
                <button type="submit" class="btn btn-sm btn-outline-light">Sign out</button>
            </form>
        </div>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-sm btn-primary" href="MicrosoftIdentity/Account/SignIn">Sign in</a>
    </NotAuthorized>
</AuthorizeView>
